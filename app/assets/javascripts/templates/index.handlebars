<div class="row">
  <div class="col-md-4">
    <form role="form">
      {{input type="text" value=searchText class="form-control"}}
      <span class="help-block">Browse articles by title or keyword</span>
    </form>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-8">
    <ul class="media-list">

      {{#if isSearching}}
        <h5>Searching...</h5>
      {{else}}
        {{#each filteredResults}}
          {{partial "result"}}
        {{/each}}
      {{/if}}

    </ul>
  </div>

  <div class="col-md-4">
    <div class="well">
      <h4>Talking Points</h4>

    </div>
  </div>
</div>
